[user]
    name = sheer-rey
    email = sheer.rey@gmail.com

[alias]
    lg = log --date-order --graph --pretty=format:'%C(yellow)%h%C(reset) - %C(dim white)%an%C(reset)%C(cyan)(%ar)%C(reset) %s %C(green)%d%C(reset)'
    sclone = clone --recurse-submodules
    supdate = submodule update --recursive --init --remote
    sfetch = fetch --recurse-submodules
    spull = pull --recurse-submodules
    spush = push --recurse-submodules=on-demand

[commit]
    template = ~/.gitmessage

[core]
    editor = vim
    excludesfile = ~/.gitignore
    pager = less -S

[color]
    ui = auto

[credential]
    helper = store

